{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Life expectancy around the world",
  "width": 1000,
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2015,
        "step": 1,
        "name": "Year: "
      }
    }
  ],

  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ehen0011/3179/main/Week9%20HW/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "projection": { "type": "equalEarth" },
      "layer": [
        {
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
          },
          "encoding": { "tooltip": { "field": "note", "type": "nominal" } }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ehen0011/3179/main/Week9%20HW/Data/life_expectancy.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ehen0011/3179/main/Week9%20HW/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "map"
        },
        { "filter": "datum.Year == Year_selection" }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "shape": { "field": "map", "type": "geojson" },
        "color": {
          "field": "Life expectancy",
          "type": "quantitative",
          "scale": {
            "domain": [40, 100],
            "scheme": "reds"
          },
          "legend": { "format": ".2s" }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal", "title": "Country" },
          {
            "field": "Life expectancy",
            "type": "quantitative",
            "title": "Life expectancy"
          },
          { "field": "Year", "type": "quantitative", "title": "Year" },
          { "field": "Status", "type": "nominal", "title": "Status" }
        ]
      }
    }
  ],
  "config": {}
}
